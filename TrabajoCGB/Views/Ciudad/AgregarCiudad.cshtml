@model TrabajoCGB.Models.ciudad

@{
    ViewBag.Title = "AgregarCiudad";
}

<h2>Agregar Ciudad</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal text-center">
    <h4>ciudad</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.nombre_ciudad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.nombre_ciudad, new { htmlAttributes = new { size = "30", MaxLength = "50" } })
            @Html.ValidationMessageFor(model => model.nombre_ciudad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.codigo_postal, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.codigo_postal, new { htmlAttributes = new { size = "10", Max = "100000000" } })
            @Html.ValidationMessageFor(model => model.codigo_postal, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class=" col-md-12">
            <input type="submit" value="Crear" class="btn btn-secondary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Retornar", "Agregar", "Oficina", null, new { style = "font-weight:bold; color:blue" })
</div>
